create database project;
use project;
create table signup(user varchar(20), name varchar(20), password varchar(20), security varchar(20), answer varchar(20));
desc signup;
select * from signup;   
create table addperson(username varchar(20), id varchar(20), number varchar(20), name varchar(20), gender varchar(20),country varchar(20),address varchar(70),email varchar(20),phone varchar(20));

desc addperson;
select * from addperson; 


create table bookpack(username varchar(20), package varchar(20), total_person varchar(20), id varchar(20), number varchar(20),phone varchar(20),amount varchar(70));
desc bookpack;
select * from bookpack; 

create table bhotel(name varchar(30), costperperson varchar(30), acroom varchar(20), foodinclude varchar(30));
