create table bookhotel(username varchar(20), hotel varchar(20), total_person varchar(20),NO_days varchar(20),ac_non_ac varchar(20), 
foodinclude varchar(20), id varchar(20), number varchar(20),phone varchar(20),amount varchar(70));
desc bookhotel;
select * from bookhotel;
